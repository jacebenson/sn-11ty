<main>
  <div class="flex">
  {% block aside %}
    {% include "leftpagenav.njk" %}
  {% endblock %}
    <div class="flex w-full lg:w-3/5 ">
      <article class="w-full max-w-4xl xl:w-4/4 my-8 lg:px-8 lg:mr-auto">
        {{ content | safe }}
      </article>
      <aside class="xl:w-4/4 hidden xl:block w-full pr-6 h-auto overflow-y-visible">
        <div class="overflow-y-auto sticky top-0 pl-6">
          <div class="text-sm font-semibold {{styles.text.primary.one}} pt-8 pb-40 lg:py-12 overflow-y-auto h-screen">
            <h4 class="text-xs uppercase text-gray-500">On this page</h4>
            {{ content | toc | safe }}
          </div>
        </div>
      </aside>
    </div>
  </div>
</main>